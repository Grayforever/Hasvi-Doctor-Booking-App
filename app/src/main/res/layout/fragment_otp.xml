<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.OtpFragment"
    android:padding="@dimen/activity_horizontal_margin"
    android:clipToPadding="false">

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/otp_header"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_back"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/otp_header"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="?textAppearanceHeadline6"
        android:text="Verify phone"
        android:gravity="center"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/code_confirm_sub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_header"
        android:layout_marginTop="32dp"
        android:textAppearance="?textAppearanceBody1"
        android:text="Code is sent to"
        android:gravity="center"
        />

    <com.mukesh.OtpView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/otp_code_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_confirm_sub"
        android:layout_marginTop="48dp"
        android:inputType="number"
        app:OtpItemCount="6"
        app:OtpViewType="rectangle"
        app:OtpLineColor="@color/colorPrimaryLight"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:textSize="16sp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/code_didnt_sub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_code_view"
        android:layout_marginTop="32dp"
        android:textAppearance="?textAppearanceBody1"
        android:text="Didn't receive code? Request again"
        android:gravity="center"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/code_get_sub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_didnt_sub"
        android:layout_marginTop="8dp"
        android:textAppearance="?textAppearanceBody1"
        android:text="Get via call"
        android:clickable="true"
        android:gravity="center"
        android:padding="8dp"
        android:fontFamily="@font/nunito_bold"
        android:foreground="?selectableItemBackgroundBorderless"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:id="@+id/continue_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Verify and Create account"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:enabled="false"
        app:layout_goneMarginTop="32dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>