<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:clipToPadding="false">


    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/menu_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_menu"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/summary_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/menu_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="?textAppearanceHeadline5"
        android:text="Summary"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/summary_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="32dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/summary_banner"
                android:layout_width="0dp"
                android:layout_height="106dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_summary"
                android:scaleType="centerCrop"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/diag_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/summary_banner"
                android:textAppearance="?textAppearanceHeadline6"
                android:text="Diagnostics"
                android:textColor="#E65B75"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="106dp"
                android:id="@+id/diag_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/diag_header"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#F4E9E9"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/diag_details"
                    android:textAppearance="?textAppearanceBody2"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="#E65B75"
                    />
            </androidx.cardview.widget.CardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/rec_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/diag_card"
                android:textAppearance="?textAppearanceHeadline6"
                android:text="Recommended tests"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:id="@+id/rec_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rec_header"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/colorPrimaryLight"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rec_details"
                    android:textAppearance="?textAppearanceBody2"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimary"
                    android:drawableEnd="@drawable/ic_info"
                    app:drawableTint="@color/colorPrimary"
                    />
            </androidx.cardview.widget.CardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/next_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rec_card"
                android:textAppearance="?textAppearanceHeadline6"
                android:text="Next step"
                android:textColor="#475268"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:id="@+id/next_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/next_header"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#DCE1ED"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/next_details"
                    android:textAppearance="?textAppearanceBody2"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="#475268"
                    android:drawableEnd="@drawable/ic_info"
                    app:drawableTint="#475268"
                    />


            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="?actionBarSize"
                android:id="@+id/find_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/next_card"
                android:layout_marginTop="24dp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
